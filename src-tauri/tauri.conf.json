{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EPlayer",
  "version": "0.1.10",
  "identifier": "com.eplayer.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "windows": {
        "installMode": "basicUi",
        "drag_and_drop": true
      },
      "endpoints": [
        "https://gitee.com/xzkids/eplayer-assets/raw/master/version.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc4ODVEOTNFRTA5M0E1MzQKUldRMHBaUGdQdG1GZU1MQlFsWTFnZVFyYVBHMzZEanNPbUZncThJRGk2WmhzOVNiYlBYcHpVMEMK"
    },

    "protocol": {
        "asset": true,
        "assetScope": ["$APPDATA/assets/*"]
    }
    
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "EPlayer      ←:previous subtitle  →:next subtitle  ↑:speed up  ↓:speed down  space:play/pause  r:repeat mode  h:help",
        "width": 1200,
        "height": 800,
        "dragDropEnabled": true      
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**", "**/**"]
      }      
    }    
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": ["app", "msi", "nsis", "dmg", "deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/ffmpeg"]
  }
  
}
